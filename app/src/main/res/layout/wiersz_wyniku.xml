<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tekst_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data: 2026-02-03"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tekst_wynik_g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G1: 20"
        android:textSize="18sp"
        android:textColor="#2E7D32"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tekst_data" />

    <TextView
        android:id="@+id/tekst_wynik_g2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G2: 15"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/tekst_wynik_g1"
        app:layout_constraintTop_toBottomOf="@id/tekst_data" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tekst_wynik_g1"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
